        <TextBlock>Podaj pierwszą liczbę</TextBlock>
        <TextBox x:Name="liczba1_textbox"
                 Height="30"
                 Width="150"
                 ></TextBox>
        <TextBlock>Podaj drugą liczbę</TextBlock>
        <TextBox x:Name="liczba2_textbox"
                  Height="30"
                 Width="150"
                 ></TextBox>
        <Button Click="Button_Click">silnia pierwszej liczby</Button>
        <Button Click="Button_Click_1" >nwd</Button>
        <Button Click="Button_Click_2">Potega</Button>
        <Button Click="Button_Click_3"> Liczby pierwsze </Button>
        <Button >Suma wszystkich liczb</Button>
    </UniformGrid>
</Window>
